@model ProductDto

<form method="post">
    <input asp-for="ProductId" hidden/>
<div class="pt-4">
    <div class="card container">
        <div class="card-header bg-dark text-light row" style="border-radius: 0px">
            <div class="col-12 col-md-6">
                <h1 class="text-white">@Model.Name</h1>
            </div>
            <div class="col-12 col-md-6 text-end">
                <h1 class="text-warning">@String.Format("{0:c}",Model.Price)</h1>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-4 p-1 text-center">
                        <img src="@Model.ImageUrl" style="border-radius:53px" width="100px" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-8 ">
                        <div class="row pl-3">
                            <div class="col-12">
                                <span class="badge badge-primary text-success p-3 boder">
                                    @Model.CategoryName
                                </span>
                                <h3 class="text-success"></h3>
                                <p class="text-secondary">@Html.Raw(Model.Description)</p>
                            </div>
                        </div>
                        <div class="row px-4">
                            <input asp-for="Count" class="form-control" />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer row bg-dark">
            <div class="col-12 col-md-6 pb-1">
                <a class="btn btn-success btn-square form-control btn-lg">Back to list</a>
            </div>
            <div class="col-12 col-md-6">
                <button type="submit" class="btn btn-info form-control btn-lg" >Add to card</button>
            </div>
        </div>
    </div>
</div>
</form>

